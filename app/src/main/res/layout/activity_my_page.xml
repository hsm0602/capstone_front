<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Page"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#303437"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"/>

    <!-- User Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardUser"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="26dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_user_blue" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#303437" />

                <TextView
                    android:id="@+id/tvUserGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="information"
                    android:textSize="14sp"
                    android:textColor="#7A7E80"/>
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- Goals -->
    <TextView
        android:id="@+id/tvGoalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goals:"
        android:textSize="16sp"
        android:textColor="#303437"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardUser"/>

    <TextView
        android:id="@+id/tvGoalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxkg"
        android:textSize="16sp"
        android:textColor="#303437"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tvGoalLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvGoalLabel"/>

    <!-- Toggle Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMetricToggle"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:text="Weekly"
        android:textSize="12sp"
        android:textAllCaps="false"
        app:cornerRadius="50dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/tvGoalLabel"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Chart Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chartContainer"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvGoalLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.example.myfirstkotlinapp.ui.mypage.BodyCompositionChartView
            android:id="@+id/chartBodyComposition"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Add Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddRecord"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:text="입력"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        app:backgroundTint="#2260FF"
        app:cornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
